<h2>Editor Page</h2>

<div class="mainBody">
  <div class="component">
    {{playground-button buttonAction=(action "toggleSave") text="Save"}}
  </div>

  <div class="component">
    {{#map-component
        class="leaflet-container"
        latVal="-25.3444"
        lngVal="131.0369"
        zoomVal="1"
        geojson=geojson
        points=points
        saveEvent=saveEvent
        drawEnabled=true
        destination=destinationChoice
        mapInstance=mapInstance}}
      {{!-- unlimited display-zones (1 layer group) with unlimited display-areas? --}}
      {{#if mapInstance}}
        {{#map-component/display-zone 
            mapInstance=mapInstance
            layer="test111"
            maintainComponentSize=true
            lat="0"
            lng="0"
            layerReady=layerReady}}
          {{#if layerReady}}
            {{#ember-wormhole to="test111"}}
              {{playground-button buttonAction=(action "toggleSave") text="4444Save444"}}
            {{/ember-wormhole}}
          {{/if}}
        {{/map-component/display-zone}}

        {{#map-component/display-zone 
            mapInstance=mapInstance
            layer="test222"
            maintainComponentSize=true
            lat="30"
            lng="30"
            layerReady=layerReady}}
          {{#if layerReady}}
            {{#ember-wormhole to="test222"}}
              {{playground-button buttonAction=(action "toggleSave") text="555Save555"}}
            {{/ember-wormhole}}
          {{/if}}
        {{/map-component/display-zone}}
      {{/if}}
    {{/map-component}}
  </div>

  <div class="component">
    <h4>Fly to:</h4>
    {{#power-select
        options=options
        selected=destinationChoice
        onchange=(action "changeSelection") as |option|}}
      {{option}}
    {{/power-select}}
  </div>
</div>